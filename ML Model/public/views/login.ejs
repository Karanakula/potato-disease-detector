<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Login | Leaf Disease Detection</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      margin: 0;
      font-family: 'Segoe UI', sans-serif;
      height: 100vh;
      display: flex;
      flex-direction: column;
    }
    nav {
      flex-shrink: 0;
    }
    .main-content {
      flex-grow: 1;
      display: flex;
    }
    .split-left {
      flex: 1;
      background-color: #d7efd7;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .split-right {
      flex: 1;
      background: #e6f2e6;
      display: flex;
      flex-direction: column;
      justify-content: center;
      padding: 60px;
    }
    .form-control {
      border-radius: 20px;
    }
    .btn-green {
      background-color: #4CAF50;
      color: white;
      border-radius: 20px;
      padding: 10px 20px;
    }
    .btn-green:hover {
      background-color: #45a049;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-success px-4">
    <a class="navbar-brand" href="/">üçÉ Leaf Detector</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
      <ul class="navbar-nav text-center">
        <li class="nav-item"><a class="nav-link" href="/home">Home</a></li>
        <li class="nav-item"><a class="nav-link" href="/about">Contact</a></li>
        <% if (typeof session !== 'undefined' && session.email) { %>
          <li class="nav-item"><a class="nav-link" href="/predict">Predict</a></li>
          <li class="nav-item"><a class="nav-link" href="/profile">History</a></li>
        <% } %>
      </ul>
    </div>

    <div class="d-flex ms-auto">
      <% if (typeof session !== 'undefined' && session.email) { %>
        <a href="/logout" class="btn btn-danger">Logout</a>
      <% } else { %>
        <a href="/login" class="btn btn-light me-2">Login</a>
        <a href="/signup" class="btn btn-warning">Signup</a>
      <% } %>
    </div>
  </nav>

  <!-- Split Layout -->
  <div class="main-content">
    <div class="split-left">
      <img src="/p1.png" alt="Potato Leaf" style="max-width: 80%; height: auto;" />
    </div>

    <div class="split-right">
      <h2 class="mb-4">Welcome Back üå±</h2>
      <form action="/login" method="POST">
        <div class="mb-3">
          <label for="username" class="form-label">Email address</label>
          <input type="email" class="form-control" name="username" required />
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" name="password" required />
        </div>
        <button type="submit" class="btn btn-green">Login</button>
      </form>
      <p class="mt-3">Don't have an account? <a href="/signup">Sign up</a></p>
    </div>
  </div>

</body>
</html>
